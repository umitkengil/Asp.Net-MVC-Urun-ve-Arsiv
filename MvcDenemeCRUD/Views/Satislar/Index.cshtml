@using MvcDenemeCRUD.Models.Entity;
@model List<tbl_satislar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mb-2">
    <div class="col-sm-12">
        <div class="btn-group-sm">
            <a href="@Url.Action("Index","Home")" class="btn btn-outline-primary btn-md float-sm-left">
                <i class="fas fa-chevron-circle-left"></i> Anasayfa
            </a>
            <a href="@Url.Action("YeniSatisEkle","Satislar")" class="btn btn-outline-success btn-md float-sm-right">
                <i class="fas fa-chevron-circle-right"></i> Yeni Satış Olustur
            </a>
        </div>
    </div><!-- /.col -->
</div><!-- /.row -->

<div class="row">
    <div class="col-lg-12 col-xs-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">DataTable with default features</h3>
            </div>
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>ürün Adı</th>
                            <th>Müşteri Adı</th>
                            <th>Adet</th>
                            <th>Ürün Fiyatı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var satis in Model)
                        {
                            <tr>
                                <td>#@satis.satis_id</td>
                                <td>@satis.tbl_urunler.urun_ad</td>
                                <td>@satis.tbl_musteriler.musteri_ad @satis.tbl_musteriler.musteri_soyad</td>
                                <td>@satis.adet</td>
                                <td>@satis.fiyati</td>
                                <td>
                                    @if (satis.statu == 0)
                                    {
                                        <a href="/Satislar/SatisGetir/@satis.satis_id" class="btn btn-outline-success">Düzenle</a>
                                        <a href="/Satislar/Arsivler/@satis.satis_id" id="btnSil" class="btn btn-outline-danger btnSil">Arşivle</a>
                                    }
                                    else if (satis.statu == 1)
                                    {
                                        <a href="/Satislar/GeriAl/@satis.satis_id" id="btnSil" class="btn btn-outline-info btnSil">Geri al</a>

                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</div>

<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true,
            "autoWidth": false,
        });
    });

</script>

